<!-- app/views/materials/_form.html.erb -->
<%= form_with(model: material, local: true) do |form| %>
  <% if material.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(material.errors.count, "error") %> prohibited this material from being saved:</h4>
      <ul>
        <% material.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :code, '地金コード', class: 'font-weight-bold' %>
            <%= form.text_field :code, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :name, '地金名', class: 'font-weight-bold' %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :market_price, '市場価格', class: 'font-weight-bold' %>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">¥</span>
              </div>
              <%= form.number_field :market_price, class: 'form-control', step: '0.01' %>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :specific_gravity, '比重', class: 'font-weight-bold' %>
            <%= form.number_field :specific_gravity, class: 'form-control', step: '0.01' %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :platinum_rate, 'プラチナ(Pt)比率(%)', class: 'font-weight-bold' %>
            <%= form.number_field :platinum_rate, class: 'form-control', step: '0.1' %>
          </div>

          <div class="form-group">
            <%= form.label :gold_rate, '金(Au)比率(%)', class: 'font-weight-bold' %>
            <%= form.number_field :gold_rate, class: 'form-control', step: '0.1' %>
          </div>

          <div class="form-group">
            <%= form.label :palladium_rate, 'パラジウム(Pd)比率(%)', class: 'font-weight-bold' %>
            <%= form.number_field :palladium_rate, class: 'form-control', step: '0.1' %>
          </div>

          <div class="form-group">
            <%= form.label :silver_rate, '銀(Ag)比率(%)', class: 'font-weight-bold' %>
            <%= form.number_field :silver_rate, class: 'form-control', step: '0.1' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <div class="custom-control custom-switch">
              <%= form.check_box :active, class: 'custom-control-input', id: 'material_active' %>
              <%= form.label :active, '有効', class: 'custom-control-label', for: 'material_active' %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <div class="actions">
        <%= form.submit '保存', class: 'btn btn-primary' %>
        <%= link_to '戻る', materials_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
<% end %>
