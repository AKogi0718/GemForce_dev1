<!-- app/views/stone_parts/_form.html.erb -->
<%= form_with(model: stone_part, local: true) do |form| %>
  <% if stone_part.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(stone_part.errors.count, "error") %> prohibited this stone_part from being saved:</h4>
      <ul>
        <% stone_part.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :code, '石パーツコード', class: 'font-weight-bold' %>
            <%= form.text_field :code, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :name, '石パーツ名', class: 'font-weight-bold' %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :stone_type, '種類', class: 'font-weight-bold' %>
            <%= form.select :stone_type,
              [
                ['ダイヤモンド', 'ダイヤモンド'],
                ['ルビー', 'ルビー'],
                ['サファイア', 'サファイア'],
                ['エメラルド', 'エメラルド'],
                ['パール', 'パール'],
                ['その他', 'その他']
              ],
              { include_blank: '選択してください' },
              { class: 'form-control' }
            %>
          </div>

          <div class="form-group">
            <%= form.label :format_type, '形式', class: 'font-weight-bold' %>
            <%= form.select :format_type,
              [
                ['石(〇〇×〇〇)', '石(〇〇×〇〇)'],
                ['バーツ(〇〇〇mm)', 'バーツ(〇〇〇mm)'],
                ['1/〇〇〇形式', '1/〇〇〇形式'],
                ['特殊', '特殊']
              ],
              { include_blank: '選択してください' },
              { class: 'form-control format-select' }
            %>
          </div>

          <div class="form-group">
            <%= form.label :size, 'サイズ', class: 'font-weight-bold' %>
            <%= form.text_field :size, class: 'form-control' %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :color, '色', class: 'font-weight-bold' %>
            <%= form.text_field :color, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :clarity, '透明度', class: 'font-weight-bold' %>
            <%= form.text_field :clarity, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :specific_gravity, '比重', class: 'font-weight-bold' %>
            <%= form.number_field :specific_gravity, class: 'form-control', step: '0.01' %>
          </div>

          <div class="form-group">
            <%= form.label :market_price, '市場価格', class: 'font-weight-bold' %>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">¥</span>
              </div>
              <%= form.number_field :market_price, class: 'form-control', step: '0.01' %>
            </div>
          </div>

          <div class="form-group">
            <div class="custom-control custom-switch">
              <%= form.check_box :active, class: 'custom-control-input', id: 'stone_part_active' %>
              <%= form.label :active, '有効', class: 'custom-control-label', for: 'stone_part_active' %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <div class="actions">
        <%= form.submit '保存', class: 'btn btn-primary' %>
        <%= link_to '戻る', stone_parts_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
<% end %>
