<!-- app/views/users/index.html.erb -->
<div class="users-container">
  <h1>ユーザー一覧</h1>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if @current_user.admin? || @current_user.system_admin? %>
    <div class="users-actions">
      <% if @current_user.company.can_add_user?('staff') || @current_user.company.can_add_user?('admin') %>
        <%= link_to "新規ユーザー登録", "/users/new?company_id=#{@current_user.company.company_id}", class: "btn btn-primary" %>
      <% else %>
        <button class="btn btn-primary disabled" disabled>ライセンス不足のため新規ユーザーを作成できません</button>
      <% end %>
    </div>
  <% end %>

  <div class="users-list">
    <table class="table">
      <thead>
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>権限</th>
          <% if @current_user.system_admin? %>
            <th>会社</th>
          <% end %>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.system_admin? %>
                <span class="badge badge-danger">システム管理者</span>
              <% elsif user.admin? %>
                <span class="badge badge-warning">管理者</span>
              <% else %>
                <span class="badge badge-info">担当者</span>
              <% end %>
            </td>
            <% if @current_user.system_admin? %>
              <td><%= user.company.name %></td>
            <% end %>
            <td>
              <%= link_to "詳細", "/users/#{user.id}", class: "btn btn-sm btn-info" %>
              <% if @current_user.admin? && @current_user.company_id == user.company_id || @current_user.system_admin? || @current_user.id == user.id %>
                <%= link_to "編集", "/users/#{user.id}/edit", class: "btn btn-sm btn-primary" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
