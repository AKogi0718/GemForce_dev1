<!-- app/views/users/edit.html.erb -->
<div class="user-form-container">
  <h1>ユーザー情報編集</h1>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="company-info">
    <h3>会社情報</h3>
    <p><strong>会社名:</strong> <%= @user.company.name %></p>
    <p><strong>会社ID:</strong> <%= @user.company.company_id %></p>
    <% if @current_user.admin? || @current_user.system_admin? %>
      <p><strong>管理者ライセンス残数:</strong> <%= @user.company.remaining_admin_licenses %></p>
      <p><strong>担当者ライセンス残数:</strong> <%= @user.company.remaining_staff_licenses %></p>
    <% end %>
  </div>

  <%= form_tag("/users/#{@user.id}/update") do %>
    <div class="form-group">
      <label for="name">氏名:</label>
      <input type="text" name="name" value="<%= @user.name %>" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="email">メールアドレス:</label>
      <input type="email" name="email" value="<%= @user.email %>" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="password">パスワード:</label>
      <input type="password" name="password" class="form-control">
      <small class="form-text text-muted">変更する場合のみ入力してください（6文字以上）</small>
    </div>

    <% if @current_user.admin? || @current_user.system_admin? %>
      <div class="form-group">
        <label for="user_type">権限タイプ:</label>
        <select name="user_type" class="form-control">
          <% @user_types.each do |label, value, available| %>
            <option value="<%= value %>" <%= 'selected' if @user.user_type == value %> <%= 'disabled' unless available %>>
              <%= label %> <%= '(ライセンス残数なし)' unless available %>
            </option>
          <% end %>
        </select>
      </div>
    <% else %>
      <input type="hidden" name="user_type" value="<%= @user.user_type %>">
    <% end %>

    <input type="submit" value="更新" class="btn btn-primary">
    <a href="/users/<%= @user.id %>" class="btn btn-secondary">キャンセル</a>
  <% end %>
</div>
