<div class="container-fluid mt-4">
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
      <h6 class="m-0 font-weight-bold text-primary">商品マスタ一覧</h6>
      <div>
        <%= link_to '新規登録', new_product_path, class: 'btn btn-primary btn-sm' %>
        <%= link_to 'CSV出力', products_path(format: :csv), class: 'btn btn-outline-secondary btn-sm ml-2' %>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>商品コード</th>
              <th>商品名</th>
              <th>取引先</th>
              <th>カテゴリ</th>
              <th>価格</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.code %></td>
                <td><%= product.name %></td>
                <td><%= product.client.name if product.client %></td>
                <td><%= product.category.name if product.category %></td>
                <td><%= number_to_currency(product.price) %></td>
                <td>
                  <%= link_to '詳細', product_path(product), class: 'btn btn-info btn-sm' %>
                  <%= link_to '編集', edit_product_path(product), class: 'btn btn-primary btn-sm' %>
                  <%= link_to '削除', product_path(product), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
