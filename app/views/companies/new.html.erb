<!-- app/views/companies/new.html.erb -->
<div class="company-form-container">
  <h1>新規会社登録</h1>

  <% if @company.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @company, local: true, url: "/companies/create") do |form| %>
    <div class="form-section">
      <h3>基本情報</h3>

      <div class="form-group">
        <%= form.label :name, "会社名" %>
        <%= form.text_field :name, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :company_id, "会社ID" %>
        <%= form.text_field :company_id, class: "form-control", required: true %>
        <small class="form-text text-muted">ユーザーのログイン時に使用します</small>
      </div>

      <div class="form-group">
        <%= form.label :is_owner, "自社判定" %>
        <div class="custom-control">
          <%= form.check_box :is_owner, class: "form-check-input" %>
          <span class="form-check-label">自社として登録する（システム管理者を作成可能）</span>
        </div>
      </div>
    </div>

    <div class="form-section">
      <h3>連絡先情報</h3>

      <div class="form-group">
        <%= form.label :email, "メールアドレス" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :phone, "電話番号" %>
        <%= form.text_field :phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :address, "住所" %>
        <%= form.text_area :address, class: "form-control", rows: 3 %>
      </div>
    </div>

    <div class="form-section">
      <h3>ライセンス設定</h3>

      <div class="form-group">
        <%= form.label :max_users, "最大ユーザー数" %>
        <%= form.number_field :max_users, class: "form-control", min: 1, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :admin_licenses, "管理者ライセンス数" %>
        <%= form.number_field :admin_licenses, class: "form-control", min: 0, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :staff_licenses, "担当者ライセンス数" %>
        <%= form.number_field :staff_licenses, class: "form-control", min: 0, required: true %>
      </div>
    </div>

    <div class="form-actions">
      <%= form.submit "登録する", class: "btn btn-primary" %>
      <%= link_to "キャンセル", "/companies", class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
