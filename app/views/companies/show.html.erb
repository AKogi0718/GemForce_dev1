<!-- app/views/companies/show.html.erb -->
<div class="company-details-container">
  <h1>会社情報</h1>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="company-card">
    <div class="company-header">
      <h2><%= @company.name %></h2>
      <div class="company-id">会社ID: <%= @company.company_id %></div>
      <div class="company-type"><%= @company.is_owner ? "【自社】" : "【他社】" %></div>
    </div>

    <div class="company-body">
      <div class="company-contact">
        <h3>連絡先情報</h3>
        <table>
          <tr>
            <th>メールアドレス:</th>
            <td><%= @company.email %></td>
          </tr>
          <tr>
            <th>電話番号:</th>
            <td><%= @company.phone %></td>
          </tr>
          <tr>
            <th>住所:</th>
            <td><%= @company.address %></td>
          </tr>
        </table>
      </div>

      <div class="company-licenses">
        <h3>ライセンス情報</h3>
        <div class="license-box">
          <div class="license-item">
            <div class="license-label">最大ユーザー数</div>
            <div class="license-value"><%= @company.users.count %>/<%= @company.max_users %></div>
          </div>
          <div class="license-item">
            <div class="license-label">管理者ライセンス</div>
            <div class="license-value"><%= @company.used_admin_licenses %>/<%= @company.admin_licenses %></div>
          </div>
          <div class="license-item">
            <div class="license-label">担当者ライセンス</div>
            <div class="license-value"><%= @company.used_staff_licenses %>/<%= @company.staff_licenses %></div>
          </div>
        </div>
      </div>
    </div>

    <div class="company-actions">
      <% if @current_user.system_admin? %>
        <%= link_to "編集", "/companies/#{@company.id}/edit", class: "btn btn-primary" %>
      <% end %>
      <% if @current_user.admin? || @current_user.system_admin? %>
        <%= link_to "ユーザー一覧", "/users/index", class: "btn btn-info" %>
      <% end %>
      <%= link_to "売掛残高一覧表出力", "/posts/select", class: "btn btn-success" %>
      <%= link_to "戻る", :back, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
